<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:p="http://www.springframework.org/schema/p" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
        http://www.springframework.org/schema/beans     
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://www.springframework.org/schema/context 
        http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<!-- SimpleUrlHandlerMapping Below -->
	<bean class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
		<property name="mappings">
			<props>
				<prop key="/hi.htm">hiController</prop>
			</props>
		</property>
		<property name="order" value="0" />
	</bean>

<!-- 	<bean name="hiController" class="com.excel.controllers.HiController"
		p:message=" I am from SimpleURLHandler" />
 -->
 		
	<bean name="hiController" class="com.excel.controllers.HiController">
		<property name="message" value="Hello I am from India"/>
	</bean>
	
	<!-- BeanNameUrlHandlerMapping Below which is default -->
	<!-- <bean name="/hi.htm" class="com.excel.controllers.HiController" p:message=" 
		I am from BeanNameURL"/> -->

	<bean id="viewResolver"
		class="org.springframework.web.servlet.view.InternalResourceViewResolver"
		p:prefix="/WEB-INF/views/" p:suffix=".jsp" />
	
	<bean name="customerController" class="com.excel.controllers.CustomerController" />
</beans>